</div>

{% endmacro %}

{% macro heading(level, title, prefix) %}
    {% if prefix is defined and prefix is not empty %}
        {% set prefix = prefix ~ '-' %}
    {% endif %}
    {% set id = prefix|default ~ title|lower|replace({ ' ': '-' }) %}
    <{{ level }} id="{{ id }}" class="docs-heading">{{ title }} <a aria-label="Jump to section" href="#{{ id }}">#</a></{{level}}>
{% endmacro %}