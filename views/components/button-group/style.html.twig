    })
}}
    " }) }}

      {{ docs.heading('h3', 'White', 'states') }}

    <p>For use on darker backgrounds.</p>

    {{ docs.example({ 
        screenreader: "Foo, button<br />⇥ Bar, button<br />⇥ Baz, button",
        class: 'd-example--dark',
        twig: "
{{
    html.button_group({
        'buttons': [
            html.button({ 'label': 'Foo', 'class': 'btn--white' }),
