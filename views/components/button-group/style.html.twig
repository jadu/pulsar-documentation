{% extends '@pulsar/pulsar/components/tab.html.twig' %}
{% import 'helpers/example.html.twig' as docs %}

{% block tab_content %}
<div class="report">
    {{ docs.heading('h2', 'Variants') }}
    {{ docs.heading('h3', 'Base') }}

    <p>The majority of the time you will use the base button styling unless you want to explicitly draw attention to a specific action.</o>

    {{ docs.example({ 
        screenreader: "Foo, button<br />⇥ Bar, button<br />⇥ Baz, button",
        twig: "
{{
    html.button_group({
        'buttons': [
            html.button({ 'label': 'Foo' }),
            html.button({ 'label': 'Bar' }),
            html.button({ 'label': 'Baz' })
        ]
    })
}}
    " }) }}

    {{ docs.heading('h3', 'Small') }}

    <p>Use in places where space is limited.</p>

    {{ docs.example({ 
        screenreader: "Foo, button<br />⇥ Bar, button<br />⇥ Baz, button",
        twig: "
{{
    html.button_group({
        'buttons': [
            html.button({ 'class': 'btn--small', 'label': 'Foo' }),
            html.button({ 'class': 'btn--small', 'label': 'Bar' }),
            html.button({ 'class': 'btn--small', 'label': 'Baz' })
        ]
    })
}}
    " }) }}

    {{ docs.heading('h2', 'States', 'button') }}

    {{ docs.heading('h3', 'Base', 'states') }}

    {{ docs.example({ 
        screenreader: "Foo, button<br />⇥ Bar, button<br />⇥ Baz, button",
        twig: "
{{
    html.button_group({
        'buttons': [
            html.button({ 'label': 'Foo' }),
            html.button({ 'label': 'Bar' }),
            html.button({ 'label': 'Baz' })
        ]
    })
}}
    " }) }}

    {{ docs.heading('h3', 'Primary', 'states') }}

    <p>Use to highlight the main action in a given UI.</p>

    {{ docs.example({ 
        screenreader: "Foo, button<br />⇥ Bar, button<br />⇥ Baz, button",
        twig: "
{{
    html.button_group({
        'buttons': [
            html.button({ 'label': 'Foo', 'class': 'btn--primary' }),
            html.button({ 'label': 'Bar', 'class': 'btn--primary' }),
            html.button({ 'label': 'Baz', 'class': 'btn--primary' })
        ]
    })
}}
    " }) }}

    {{ docs.heading('h3', 'Success', 'states') }}

    <p>Use to highlight actions which result in a final, posivite outcome; Like publishing content to the public.</p>

    {{ docs.example({ 
        screenreader: "Foo, button<br />⇥ Bar, button<br />⇥ Baz, button",
        twig: "
{{
    html.button_group({
        'buttons': [
            html.button({ 'label': 'Foo', 'class': 'btn--success' }),
            html.button({ 'label': 'Bar', 'class': 'btn--success' }),
            html.button({ 'label': 'Baz', 'class': 'btn--success' })
        ]
    })
}}
    " }) }}

    {{ docs.heading('h3', 'Danger', 'states') }}

    <p>Use to highlight dangerous or destructive actions, like permanently deleting data.</p>

    {{ docs.example({ 
        screenreader: "Foo, button<br />⇥ Bar, button<br />⇥ Baz, button",
        twig: "
{{
    html.button_group({
        'buttons': [
            html.button({ 'label': 'Foo', 'class': 'btn--danger' }),
            html.button({ 'label': 'Bar', 'class': 'btn--danger' }),
            html.button({ 'label': 'Baz', 'class': 'btn--danger' })
        ]
    })
}}
    " }) }}

    {{ docs.heading('h3', 'Warning', 'states') }}

    <p>Use to highlight actions taking longer than expected, or intermediate states.</p>

    {{ docs.example({ 
        screenreader: "Foo, button<br />⇥ Bar, button<br />⇥ Baz, button",
        twig: "
{{
    html.button_group({
        'buttons': [
            html.button({ 'label': 'Foo', 'class': 'btn--warning' }),
            html.button({ 'label': 'Bar', 'class': 'btn--warning' }),
