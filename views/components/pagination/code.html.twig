{% extends '@pulsar/pulsar/components/tab.html.twig' %}
{% import 'helpers/example.html.twig' as docs %}

{% block tab_content %}
<div class="report">
    <p class="lede">Provide a control for users to navigate through 'pages' of content.</p>
    
    {{ docs.heading('h2', 'Basic usage') }}

    <p>This component can be used where developers have implemented their own pagination controllers, if you're using datatables, this component will be used to paginate the table if there are an appropriate number of rows.</p>

    <p>{{ html.icon('info-sign') }} Pagination should not be displayed if there aren't enough records to require the table to be paginated.</p>

    {{ docs.heading('h3', 'Example first page') }}
    <p>The previous and next links should only be shown when a previous or next page exist. The previous link should not be shown when the user is on the first page.</p>

    {{ docs.example({ 
        html: '
<nav aria-label="Table pagination" class="pagination">
    <ul class="pull-left">
        <li class="selected"><a href="#1" aria-current="true" aria-label="Current page, page 1">1</a></li>
        <li><a href="#2" aria-label="page 2">2</a></li>
        <li><a href="#3" aria-label="page 3">3</a></li>
        <li><a href="#4" aria-label="page 4">4</a></li>
        <li><a href="#5" aria-label="page 5">5</a></li>
        <li><a href="#next" aria-label="next page">Next</a></li>
    </ul>
</nav>
    ' }) }}

    {{ docs.heading('h3', 'Example middle page') }}

    {{ docs.example({ 
        html: '
<nav aria-label="Table pagination" class="pagination">
    <ul class="pull-left">
        <li><a href="#prev" aria-label="previous page">Previous</a></li>
        <li><a href="#1" aria-label="page 1">1</a></li>
        <li class="selected"><a href="#2" aria-current="true" aria-label="Current page, page 2">2</a></li>
        <li><a href="#3" aria-label="page 3">3</a></li>
        <li><a href="#4" aria-label="page 4">4</a></li>
        <li><a href="#5" aria-label="page 5">5</a></li>
        <li><a href="#next" aria-label="next page">Next</a></li>
    </ul>
</nav>
    ' }) }}

    {{ docs.heading('h3', 'Example last page') }}
    <p>The previous link should not be shown when the user is on the last page.</p>

    {{ docs.example({ 
        html: '
<nav aria-label="Table pagination" class="pagination">
    <ul class="pull-left">
        <li><a href="#prev" aria-label="previous page">Previous</a></li>
        <li><a href="#1" aria-label="page 1">1</a></li>
        <li><a href="#2" aria-label="page 2">2</a></li>
        <li><a href="#3" aria-label="page 3">3</a></li>
        <li><a href="#4" aria-label="page 4">4</a></li>
        <li class="selected"><a href="#5" aria-current="true" aria-label="Current page, page 5">5</a></li>
    </ul>
</nav>
    ' }) }}

</div>
{% endblock tab_content %}
{% block tab_sidebar %}
    <h4>On this page</h4>
    <ul class="page-nav">
        <li><a href="#basic-usage">Basic usage</a></li>
    </ul>
{% endblock tab_sidebar %}