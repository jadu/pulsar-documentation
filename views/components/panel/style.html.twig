{% extends '@pulsar/pulsar/components/tab.html.twig' %}
{% import 'helpers/example.html.twig' as docs %}

{% block tab_content %}
<div class="report">

    {{ docs.heading('h2', 'Variations') }}

    <p>There are a collection of specialised classes and utility classes that can be chained together to meet your specific needs.</p>

    {{ docs.heading('h3', 'Basic panels') }}

    <p>Panels don’t need a title or icon, and can be used as a standout container for text.</p>

    {{ docs.example({ 
        twig: "
{{
    html.panel({
        'body': 'This text is important and should be highlighted',
    })
}}
    " }) }}

    {{ docs.heading('h3', 'Padded') }}

    <p>Increase the vertical padding if you need more space.</p>

    {{ docs.example({ 
        twig: "
{{
    html.panel({
        'body': 'This text is important and should be highlighted',
        'class': 'panel--padded'
    })
}}
    " }) }}

    {{ docs.heading('h3', 'Centered') }}

    <p>Use the <code>.u-text-align-center</code> utility class to center text where required.</p>

    {{ docs.example({ 
        twig: "
{{
    html.panel({
        'body': 'This text is important and should be highlighted',
        'class': 'u-text-align-center'
    })
}}
    " }) }}

    {{ docs.heading('h2', 'States') }}
    {{ docs.heading('h3', 'Base') }}

    {{ docs.example({ 
        twig: "
{{
