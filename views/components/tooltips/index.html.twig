{% extends 'docs.html.twig' %}

{% set heading = 'Tooltips' %}

{%
    set breadcrumbs = [
        {'label': 'Home', 'href': '/'},
        {'label': 'Components', 'data-toggle-nav': '#components'},
        {'label': 'Tooltips', 'href': '#'}
    ]
%}

{% set tab_code %}
    {% include 'components/tooltips/code.html.twig' %}
{% endset %}
{% set tab_deprecated %}
    {% include 'components/tooltips/deprecated.html.twig' %}
{% endset %}

{%
    set tabs_content = [
        {
          "id"    : "new",
          "class" : "ui-report",
          "label" : "New",
          "src"   : tab_code,
          "active": true
        },
        {
          "id"    : "deprecated",
          "class" : "ui-report",
          "label" : "Deprecated",
          "src"   : tab_deprecated
        }
    ]
%}
