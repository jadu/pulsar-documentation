    {% include 'components/modal/code.html.twig' %}
{% endset %}
{% set tab_style %}
    {% include 'components/modal/style.html.twig' %}
{% endset %}

{%
    set tabs_content = [
        {
          "id"    : "code",
          "class" : "ui-report",
