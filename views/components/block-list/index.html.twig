{% extends 'docs.html.twig' %}

{% set heading = 'Block List' %}

{%
    set breadcrumbs = [
        {'label': 'Home', 'href': '/'},
        {'label': 'Components', 'data-toggle-nav': '#components'},
        {'label': 'Block List', 'href': '#'}
    ]
%}

{% set tab_code %}
    {% include 'components/block-list/code.html.twig' %}
{% endset %}
{% set tab_style %}
    {% include 'components/block-list/style.html.twig' %}
{% endset %}

{%
    set tabs_content = [
        {
          "id"    : "code",
          "class" : "ui-report",
          "label" : "Code",
          "src"   : tab_code,
          "active": true
        },
        {
          "id"    : "guidelines",
          "class" : "ui-report",
          "label" : "Style",
          "src"   : tab_style
        }
    ]
%}
