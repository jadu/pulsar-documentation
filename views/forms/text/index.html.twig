{% extends 'docs.html.twig' %}

{% set heading = 'Text' %}

{%
    set breadcrumbs = [
        {'label': 'Home', 'href': '/'},
        {'label': 'Forms', 'data-toggle-nav': '#forms'},
        {'label': 'Text', 'href': '#'}
    ]
%}

{% set tab_code %}
    {% include 'forms/text/code.html.twig' %}
{% endset %}
{% set tab_style %}
    {% include 'forms/text/style.html.twig' %}
{% endset %}

{%
    set tabs_content = [
        {
          "id"    : "code",
          "class" : "ui-report",
          "label" : "Code",
          "src"   : tab_code,
          "active": true
        },
        {
          "id"    : "style",
          "class" : "ui-report",
          "label" : "Style",
          "src"   : tab_style,
        }
    ]
%}
